@model AccountProjectCore.Models.Account

@{
    ViewData["Title"] = "GetAccountHoldersByAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.AccountNumber)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.AccountNumber)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Balance)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Balance)
		</dd>
	</dl>
	<tbody>
		<dl class="row"></dl>
		@foreach (var item in Model.AccountAccountHolders)
		{
			<dt class="col-sm-2">
				@Html.DisplayNameFor(modelItem => item.Holder)
			</dt>
			<dd class="col-sm-10">

			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Holder.Name)
				</td>

			</tr>
		</dd>
		}
	</tbody>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
